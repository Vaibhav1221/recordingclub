<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RecordingClub" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/bluecolor</item>
        <item name="colorPrimaryDark">@color/bluecolor</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="actionMenuTextAppearance">@style/CustomMenuTextStyle</item>
        <item name="actionMenuTextColor">@color/redcolor</item>
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="Theme.RecordingClub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecordingClub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecordingClub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bluecolor</item>
        <item name="android:textColor">@color/redcolor</item>
    </style>

    <style name="CustomMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/redcolor</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/bluecolor</item>
    </style>
</resources>