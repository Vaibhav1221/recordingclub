<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_chapter_tl_chapter_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginLeft="@dimen/edit_text_left_margin"
                android:layout_marginTop="@dimen/margin_between_titleBar_and_view"
                android:layout_marginRight="@dimen/edit_text_right_margin"
                android:padding="@dimen/padding_of_view"
                android:textColorHint="@color/hint_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_chapter_et_chapter_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="textCapSentences"
                    android:maxLength="1000"
                    android:maxLines="1"
                    android:screenReaderFocusable="true"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_chapter_tl_chapter_file_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_text_left_margin"
                android:layout_marginTop="@dimen/margin_top_between_two_view"
                android:layout_marginRight="@dimen/edit_text_right_margin"
                android:minHeight="@dimen/edit_text_height"
                android:padding="@dimen/padding_of_view"
                android:textColorHint="@color/hint_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_chapter_et_chapter_file_link"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="text"
                    android:maxLength="10000"
                    android:screenReaderFocusable="true"
                    android:textSize="@dimen/default_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_view_height"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top_between_two_view"
                android:layout_marginRight="@dimen/margin_right"
                android:padding="@dimen/padding_of_view"
                android:screenReaderFocusable="true"
                android:text="@string/audio_books_name"
                android:textSize="@dimen/text_view_text_size" />

            <Spinner
                android:id="@+id/create_chapter_sp_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top_between_two_view"
                android:layout_marginRight="@dimen/margin_right"
                android:focusable="true"
                android:padding="@dimen/padding_of_view"
                android:screenReaderFocusable="true">

            </Spinner>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/create_chapter_btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top_between_two_view"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:focusable="true"
                android:padding="@dimen/padding_of_view"
                android:screenReaderFocusable="true"
                android:text="@string/btn_next"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                app:cornerRadius="5dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>