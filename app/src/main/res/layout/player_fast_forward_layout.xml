<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/fs_ch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:focusable="true"
                android:padding="3dp"
                android:screenReaderFocusable="true"
                android:text="10 Second"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <CheckBox
                android:id="@+id/fs_ch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:focusable="true"
                android:padding="3dp"
                android:screenReaderFocusable="true"
                android:text="30 Second"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <CheckBox
                android:id="@+id/fs_ch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:focusable="true"
                android:padding="3dp"
                android:screenReaderFocusable="true"
                android:text="1 Minute"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <CheckBox
                android:id="@+id/fs_ch4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:focusable="true"
                android:padding="3dp"
                android:screenReaderFocusable="true"
                android:text="2 Minute"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <CheckBox
                android:id="@+id/fs_ch5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:focusable="true"
                android:padding="3dp"
                android:screenReaderFocusable="true"
                android:text="5 Minute"
                android:textAlignment="center"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>