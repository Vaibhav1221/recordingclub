<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen_color"
    android:orientation="vertical"
    tools:context=".admin.SendNotification">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_send_et1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:padding="3dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/send_notification_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:focusable="true"
            android:inputType="textCapSentences"
            android:screenReaderFocusable="true"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_send_et2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:padding="3dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/send_notification_et2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:focusable="true"
            android:inputType="textCapSentences|textMultiLine"
            android:screenReaderFocusable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_notification_btn"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="35dp"
        android:focusable="true"
        android:padding="3dp"
        android:screenReaderFocusable="true"
        android:text="Send"
        android:textAllCaps="false"
        app:cornerRadius="5dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />
</LinearLayout>