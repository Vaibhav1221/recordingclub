<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wsr_tl_full_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginLeft="@dimen/edit_text_left_margin"
                android:layout_marginTop="@dimen/margin_between_titleBar_and_view"
                android:layout_marginRight="@dimen/edit_text_right_margin"
                android:padding="@dimen/padding_of_view"
                android:textColorHint="@color/hint_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/wsr_et_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="textCapSentences"
                    android:maxLength="1000"
                    android:maxLines="1"
                    android:screenReaderFocusable="true"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wsr_tl_phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginLeft="@dimen/edit_text_left_margin"
                android:layout_marginTop="@dimen/margin_top_between_two_view"
                android:layout_marginRight="@dimen/edit_text_right_margin"
                android:padding="@dimen/padding_of_view"
                android:textColorHint="@color/hint_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/wsr_et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:screenReaderFocusable="true"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/wsr_btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top_between_two_view"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:focusable="true"
                android:padding="@dimen/padding_of_view"
                android:screenReaderFocusable="true"
                android:text="@string/btn_next"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                app:cornerRadius="5dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>