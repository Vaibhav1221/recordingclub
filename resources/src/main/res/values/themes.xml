<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RecordingClub" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

    </style>


    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.RecordingClub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecordingClub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecordingClub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>